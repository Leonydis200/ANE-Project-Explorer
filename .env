# Environment: development, production, test
NODE_ENV=development

# Application
VITE_APP_NAME="ANE Project Explorer"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Advanced Network Explorer Dashboard"
VITE_BASE_URL=/

# API Configuration
VITE_API_URL=http://localhost:5000/api
VITE_SOCKET_URL=ws://localhost:5000

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_OFFLINE=true
VITE_ENABLE_DEBUG=true

# Sentry (Error Tracking)
VITE_SENTRY_DSN=your-sentry-dsn-here
VITE_SENTRY_ENVIRONMENT=development

# Google Analytics
VITE_GA_TRACKING_ID=your-ga-tracking-id

# Development Server
VITE_PORT=3000
VITE_HOST=localhost
VITE_OPEN_BROWSER=true
VITE_HTTPS=false
VITE_PROXY_TARGET=http://localhost:5000

# Testing
VITE_TEST_ENV=jsdom
VITE_TEST_COVERAGE=false
VITE_TEST_WATCH=false

# Build Output
VITE_OUT_DIR=dist
VITE_ASSETS_DIR=assets
VITE_SOURCEMAP=true

# Authentication
VITE_AUTH_ENABLED=true
VITE_AUTH_PROVIDER=local
VITE_AUTH_TOKEN_KEY=ane_auth_token
VITE_REFRESH_TOKEN_KEY=ane_refresh_token

# Internationalization
VITE_I18N_ENABLED=true
VITE_I18N_DEFAULT_LOCALE=en
VITE_I18N_FALLBACK_LOCALE=en
VITE_I18N_LOCALE_DIR=locales

# Theme
VITE_THEME_DEFAULT=light
VITE_THEME_AVAILABLE=light,dark,system
VITE_THEME_STORAGE_KEY=ane_theme

# API Timeouts (in milliseconds)
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000
